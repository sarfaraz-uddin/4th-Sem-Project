@model DMS.ViewModels.VMEmail.VMEditSettings

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="toolbar row">
        <div class="col-sm-6 hidden-xs">
            <div class="page-header">
                <h1>
                    Configuration
                    <small>List</small>
                </h1>
            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="toolbar-tools pull-right">
                <ul class="nav navbar-right">
                    <li class="back">
                        <a href="@Url.Action("Index")">
                            <i class="fa fa-chevron-left">
                            </i> BACK
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-body">
                    @Html.Raw(FlashBag.showMessage())
                    @using (Html.BeginForm())
                    {

                        int sn = 0;
                        <div class="table-responsive col-md-12">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            SN
                                        </th>
                                        <th>
                                            Module Name
                                        </th>
                                        <th>
                                            Key Name
                                        </th>
                                        <th>
                                            Value
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            Email Notification
                                        </td>
                                        <td>
                                            <input type="checkbox" data-toggle="toggle" data-on="True" data-off="False" data-onstyle="success" data-offstyle="danger" name="EmailNotification" value="true" form-control @(Model != null && !Model.EmailNotification ? "" : "checked")>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            SMTP Server
                                        </td>
                                        <td>
                                            @Html.EditorFor(modelItem => Model.SMTPServer, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            SMTP User
                                        </td>
                                        <td>
                                            @Html.EditorFor(modelItem => Model.SMTPUser, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            SMTP Password
                                        </td>
                                        <td>
                                            <input type="password" value="@Model.SMTPPassword" name="SMTPPassword" class="form-control" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            SMTP Port
                                        </td>
                                        <td>
                                            @Html.EditorFor(modelItem => Model.SMTPPort, new { htmlAttributes = new { @class = "form-control number" } })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            SMTP From
                                        </td>
                                        <td>
                                            @Html.EditorFor(modelItem => Model.SMTPFrom, new { htmlAttributes = new { @class = "form-control" } })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            @(++sn)
                                        </td>
                                        <td>
                                            Mail
                                        </td>
                                        <td>
                                            SMTP SSL
                                        </td>
                                        <td>
                                            <input type="checkbox" data-toggle="toggle" data-on="True" data-off="False" data-onstyle="success" data-offstyle="danger" name="SMTPSSL" value="true" form-control @(Model != null && !Model.SMTPSSL ? "" : "checked")>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>


                        <div class="pull-right col-md-1">
                            <input class="btn btn-success" type="submit" value="Save" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>