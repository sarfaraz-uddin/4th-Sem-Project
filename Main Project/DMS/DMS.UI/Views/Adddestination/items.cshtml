
@{
    Layout = "~/Views/Shared/adminlayout.cshtml";
    ViewBag.Title = "items";
}

<h2 style="margin-top:75px">items</h2>
@using (Html.BeginForm("SaveData", null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    <label class="col-md-2">Name</label>
    <div class="col-md-4">
        <input type="text" name="dname" class="form-control" />
    </div>
    <br />

    <label class="col-md-2">Time</label>
    <div class="col-md-4">
        <input type="text" name="dtime" class="form-control" />
    </div>
    <br />

    <label class="col-md-2">Location</label>
    <div class="col-md-4">
        <input type="text" name="location" class="form-control" />
    </div>
    <br />

    <label class="col-md-2">Description</label>
    <div class="col-md-4">
        <input type="text" name="description" class="form-control" />
    </div>
    <br />

    <div class="col-md-2">
        <input type="Submit" class="btn btn-success" value="Save" />
    </div>

    <br />
    <div class="row-fom-group">
        <label class="col-md-2">Photo</label>
        <div class="col-md-4">
            <input type="file" name="photo" class="form-control" />
        </div>
    </div>
    <div class="col-md-2">
        <input type="Submit" class="btn btn-success" value="Save" />
    </div>

}
