
@{
    ViewBag.Title = "index";
    int id = 0;
}

<h2>Index</h2>
<a href="@Url.Action("items")">Add a new record</a>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Time</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach(var data in Model)
            {
            <tr>
                <td>@(++id)</td>
                <td>@(data.dname)</td>
                <td>@(data.dtime)</td>
                <td>@(data.description)</td>
                <td><a href="@Url.Action("edit",new {id = data.eid})">Edit</a></td>
                <td><a href="@Url.Action("deletedata",new {e_id = data.eid})">Delete</a></td>
            </tr>
            }
</table>


