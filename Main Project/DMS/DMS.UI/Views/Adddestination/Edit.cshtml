@model DMS.DAL.DatabaseContext.destination
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Updatedata", "Adddestination"))
{
    <input type="hidden" name="id" value="@Model.id" />
    <label class="col-md-2">Name</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="dname" class="form-control" value="@Model.dname" />
    </div>

    <label class="col-md-2">Time</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="dtime" class="form-control" value="@Model.dtime" />
    </div>

    <label class="col-md-2">Location</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="location" class="form-control" value="@Model.location" />
    </div>
    <br />

    <label class="col-md-2">Description</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="description" class="form-control" value="@Model.description" />
    </div>
    <br />

    <label class="col-md-2">Photo</label>
    <br />
    <div class="col-md-4">
        <input type="text" name="photo" class="form-control" value="@Model.photo" />
    </div>
    <br />

    <div class="col-md-2">
        <input type="Submit" class="btn btn-success" value="Save" />
    </div>
}
